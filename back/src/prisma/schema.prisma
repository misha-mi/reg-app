generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file: ./dev.db"
}

model User {
  id       String @id
  login    String @unique
  password String 
  role     String
  name     String
  token    String?
  number   String? @unique
}

model Logger {
  id       String @id @default(uuid())
  ip       String
  type     String
  context  String 
  desc     String
  time     DateTime @default(now())
}